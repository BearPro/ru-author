@using System.Security.Claims


<div class="container">
    <nav>
        <a class="header-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Logo/logo_1.png" /></a>
        <ul class="header-nav-line">
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                </li>
                <li>
                    <a asp-controller="Profile" asp-action="Profile" asp-route-shortLink="@User.Identity.Name">Профиль</a>
                </li>
                @if (User.HasClaim(ClaimTypes.Role, "Moderator"))
                {
                    <li>
                        <a asp-controller="Participant" asp-action="Review">Модерация</a>
                    </li>
                }
                <li>
                    <a asp-controller="Account" asp-action="Logout">Выход</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            }
        </ul>
        <div id="header-auth">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="#">@User.Identity.Name</a>
            }
            else
            {
                <a asp-action="Main" asp-controller="Account">
                    <div class="img-wrap"><img class="imgSvg imgSvg_orange imgSvg_socialIcons100" src="~/img/icons/avatar.svg" /></div>
                    <p>Авторизация</p>
                </a>
            }
            </div>
    </nav>
</div>


